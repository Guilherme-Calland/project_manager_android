<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AddTaskActivity"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/projectTheme"
    android:id="@+id/ll_add_task_layout"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn_back"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="top"
            android:paddingHorizontal="4sp"
            android:paddingVertical="8sp"
            android:layout_marginTop="8sp"
            android:onClick="onBackBtnPressed"
            android:textColor="@color/white"
            android:src="@drawable/outline_arrow_back_black_24dp"
            />

        <LinearLayout
            android:id="@+id/ll_responsible_member"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:paddingVertical="16sp"
            android:orientation="vertical"
            android:background="@drawable/item_background_dark"
            android:layout_margin="8sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8sp"
                android:layout_marginBottom="2sp"
                android:text="@string/responsible_members_top"
                android:textColor="@color/white"
                android:textColorHint="@color/custom_gray_light"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_responsible_list"
                android:layout_width="match_parent"
                android:layout_height="130sp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16sp"
            android:background="@drawable/item_background_dark"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:text="@string/new_task_message"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginBottom="8sp"
                />

            <EditText
                android:lines="2"
                android:gravity="start"
                android:id="@+id/et_task"
                android:background="@drawable/item_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8sp"
                android:paddingHorizontal="8sp"
                android:layout_marginHorizontal="8sp"
                android:textColor="@color/white"
                android:hint="@string/add_hint"
                android:textColorHint="@color/custom_gray_light"

                />

            <TextView
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginHorizontal="8sp"
                android:background="@drawable/button_background"
                android:paddingVertical="12sp"
                android:text="@string/add_button_text"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_add_h"
            android:visibility="gone"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8sp"
            android:paddingVertical="12sp"
            android:background="@drawable/button_background_dark"
            android:text="@string/add_button_text"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            />

    </LinearLayout>



</LinearLayout>