<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/projectTheme"
    tools:context=".screens.MembersActivity"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="16sp"
            android:background="@drawable/item_background_dark"
            android:paddingHorizontal="16sp"
            android:paddingVertical="8sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/members_title"
                android:textSize="24sp"
                android:layout_marginBottom="8sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/item_background_dark"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8sp"
            android:paddingHorizontal="16sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/add_new_member_title"
                android:layout_marginBottom="8sp"
                android:textSize="24sp"
                />

            <EditText
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_background"
                android:hint="@string/hint_name"
                android:textColorHint="@color/custom_gray_light"
                android:layout_marginBottom="8sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                >
                <TextView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:background="@drawable/green_background"
                    android:layout_marginRight="5sp"
                    />

                <TextView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:background="@drawable/blue_background"
                    android:layout_marginRight="5sp"
                    />
                <TextView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:background="@drawable/purple_background"
                    android:layout_marginRight="5sp"
                    />

                <TextView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:background="@drawable/red_background"
                    android:layout_marginRight="5sp"
                    />

                <TextView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:background="@drawable/orange_background"
                    android:layout_marginRight="5sp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:layout_marginVertical="8sp"
                android:text="@string/add_new_member_text"
                android:textColor="@color/white"
                android:textAlignment="center"
                />


        </LinearLayout>







    </LinearLayout>

</LinearLayout>